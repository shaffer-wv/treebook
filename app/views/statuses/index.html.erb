<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<% if user_signed_in? %>
  <%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
<% end %>

<% @statuses.each do |s| %>
<div class="status">
  <strong><%= s.user.full_name %></strong>
  <p><%= s.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(s.created_at) + " ago", s %>
    <span class="admin">
      | <%= link_to "Edit", edit_status_path(s) %> | 
      <%= link_to "Delete", s, method: :delete, data: { confirm: "Are you sure you want 
        to delete this status?"} %>
    </span>
  </div>
</div>

<% end %>